@page
@model AddExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

<div style="background-color: #4A6FA5; color: white; padding: 15px; margin-bottom: 0;">
    <h1 style="margin: 0;">Expense Management System</h1>
</div>

<div style="background-color: #D3D3D3; padding: 40px;">
    <h2 style="margin-top: 0; margin-bottom: 30px;">Add Expense</h2>
    
    <form method="post">
        <div style="margin-bottom: 15px;">
            <label style="display: inline-block; width: 120px; font-weight: bold;">Amount:</label>
            <input type="number" step="0.01" asp-for="Amount" style="width: 250px; padding: 5px;" required />
        </div>

        <div style="margin-bottom: 15px;">
            <label style="display: inline-block; width: 120px; font-weight: bold;">Date:</label>
            <input type="date" asp-for="ExpenseDate" style="width: 250px; padding: 5px;" required />
        </div>

        <div style="margin-bottom: 15px;">
            <label style="display: inline-block; width: 120px; font-weight: bold; vertical-align: top;">Category:</label>
            <select asp-for="CategoryId" asp-items="Model.Categories" style="width: 250px; padding: 5px;" required>
                <option value="">-- Select Category --</option>
            </select>
        </div>

        <div style="margin-bottom: 25px;">
            <label style="display: inline-block; width: 120px; font-weight: bold; vertical-align: top;">Description:</label>
            <textarea asp-for="Description" rows="5" style="width: 370px; padding: 5px;"></textarea>
        </div>

        <div style="text-align: center;">
            <button type="submit" style="padding: 10px 40px; font-size: 16px; background-color: #D3D3D3; border: 2px solid black; cursor: pointer;">Submit</button>
        </div>
    </form>

    <div style="margin-top: 20px;">
        <a href="/Index" style="text-decoration: none; color: #0066cc;">‚Üê Back to Expenses</a>
    </div>
</div>
